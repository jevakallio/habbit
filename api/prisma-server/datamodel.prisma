type User {
  id: ID! @unique
  email: String @unique
  name: String!
  timezone: String
  habits: [Habit!]! # user has habits
}

enum HabitFrequency {
  DAILY
  WEEKLY
  DAYS_PER_WEEK
  COUNT_PER_WEEK
}

enum HabitSchedule {
  MONDAY
  TUESDAY
  WEDNESDAY
  THURSDAY
  FRIDAY
  SATURDAY
  SUNDAY
}

type Habit {
  id: ID! @unique
  task: String!
  active: Boolean! @default(value: "true")
  avatarName: String!
  avatarColor: String!
  frequency: HabitFrequency!
  weeklyCount: Int
  weeklySchedule: [HabitSchedule!]!
  health: Float! @default(value: "1") # 0...1
  user: User! # habit belongs to a user
  activity: [Activity!]!
}

type Activity {
  id: ID! @unique
  user: User!
  habit: Habit!
  timestamp: DateTime!
}

type Avatar {
  id: ID! @unique
  name: String!
  color: String!
}
